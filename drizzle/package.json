{
  "name": "drizzle",
  "displayName": "drizzle",
  "description": "Drizzle is a simple language support for Lamda RED to draw your Risk, Goal and Agent diagrams projects.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "drizzle",
        "aliases": [
          "Drizzle",
          "drizzle"
        ],
        "extensions": [
          ".zz",
          ".drizzle",
          ".rd"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/light_drizzle.png",
          "dark": "./icons/dark_drizzle.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "drizzle",
        "scopeName": "source.zz",
        "path": "./syntaxes/drizzle.tmLanguage.json"
      }
    ]
  }
}
